<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    
  </head>

  
  <body>
    

   <ul>
   <% if user_signed_in? %>
     <!--<li><%= link_to "Hi, #{current_user.email}", edit_user_registration_path %></li>-->
      <%= link_to '<button type="button" class="btn btn-secondary"> Sign Out </button>'.html_safe,  destroy_user_session_path, method: :delete %>
   <% else %>
     <%= link_to '<button type="button" class="btn btn-secondary"> Sign In </button>'.html_safe,  new_user_session_path %>
     <%= link_to '<button type="button" class="btn btn-secondary"> Sign Up </button>'.html_safe,  new_user_registration_path %>
   <% end %>
   </ul>
   <%= yield %>

  </body>
</html>



